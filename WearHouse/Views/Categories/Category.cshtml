@model WearHouse.Models.AddCategoryViewModel
@{
}

<link rel="stylesheet" href="~/css/Category.css" asp-append-version="true" />

<main>
    <div class="top">
        <h1>Product Categories</h1>
    </div>
    <div class="bottom">
        <div class="add-category">
            <button class="openAdd">Add Category</button>
        </div>
        <div class="list-category">
            <table>
                <tr>
                    <th class="no">No.</th>
                    <th class="category">Category</th>
                    <th class="action">Action</th>
                </tr>
                <tr class="odd">
                    <td class="no">1</td>
                    <td class="category">Shoes</td>
                    <td class="action">
                        <button class="openEdit">Edit</button>
                        <button class="openDelete">Delete</button>
                    </td>
                </tr>
                <tr class="even">
                    <td class="no">2</td>
                    <td class="category">Hats</td>
                    <td class="action">
                        <button class="openEdit">Edit</button>
                        <button class="openDelete">Delete</button>
                    </td>
                </tr>
                <tr class="odd">
                    <td class="no">3</td>
                    <td class="category">Clothes</td>
                    <td class="action">
                        <button class="openEdit">Edit</button>
                        <button class="openDelete">Delete</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</main>

<div id="overlay"></div>

<form action="Category" method="post" id="category-form" autocomplete="off">
<div class="modalAdd">
    <div class="add-top">
        <div id="add-title">Add Category</div>
        <button class="close">&times;</button>
    </div>
    <div class="add-middle">
        <div id="add-text">Category</div>
        <input type="text" placeholder="Insert Category Here" asp-for="CategoryName">
    </div>
    <div class="add-bottom">
        <button type="submit">Submit</button>
    </div>
</div>

<div class="modalEdit">
    <div class="add-top">
        <div id="add-title">Edit Category</div>
        <button class="close">&times;</button>
    </div>
    <div class="add-middle">
        <div id="add-text">Category</div>
        <input type="text" placeholder="Edit Category Here">
    </div>
    <div class="add-bottom">
        <button type="submit">Submit</button>
    </div>
</div>

<div class="modalDelete">
    <div class="del-top">
        <div id="del-title">Delete Category</div>
        <button class="close">&times;</button>
    </div>
    <div class="del-middle">
        This action is irreversible! Are you sure you want to delete this category?
    </div>
    <div class="del-bottom">
        <button type="submit">Delete</button>
    </div>
</div>
</form>

<script src="~/js/category.js"></script>